{
	"name": "Awesome Digital History",
	"version": "0.0.1",
	"url": "https://maehr.github.io/awesome-digital-history/issues",
	"license": "CC0",
	"scripts": {
		"commit": "cz",
		"awesome-lint": "awesome-lint",
		"prepare": "husky install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --plugin-search-dir . --check . '!{CODE_OF_CONDUCT.md,LICENSE.md}' && eslint .",
		"format": "prettier --plugin-search-dir . --write . '!{CODE_OF_CONDUCT.md,LICENSE.md}'"
	},
	"devDependencies": {
		"@playwright/test": "1.25.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/typography": "^0.5.8",
		"autoprefixer": "^10.4.13",
		"awesome-lint": "^0.18.0",
		"cz-conventional-changelog": "^3.3.0",
		"daisyui": "^2.39.0",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.2",
		"postcss": "^8.4.18",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-multiselect": "^8.0.2",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.2.3",
		"typescript": "^4.8.4",
		"vite": "^3.2.3"
	},
	"type": "module",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		},
		"husky": {
			"hooks": {
				"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
			}
		}
	}
}
